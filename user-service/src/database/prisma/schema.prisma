generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model founders {
  id          Int      @id @default(autoincrement())
  fullname    String
  email       String   @unique
  companyname String
  image       String
  role        String   @default("founder")
  ispaid      Boolean  @default(false)
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Employee {
  id           Int        @id @default(autoincrement())
  fullname     String
  email        String     @unique
  phone        String     @unique
  salary       Int
  gender       String
  password     String
  image        String
  birthdate    DateTime
  role         String
  designation  String
  department   Department @relation(fields: [departmentId], references: [id])
  departmentId Int
  joindate     DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Department {
  id       Int        @id @default(autoincrement())
  name     String     @unique
  Employee Employee[]
}
